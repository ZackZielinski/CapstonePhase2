@model CapStonePhase2.Models.Students_Lectures

@{
    ViewBag.Title = "Review Question";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{     @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        <h4>
            @Html.DisplayFor(model => model.Lecture.ReviewQuestion)
        </h4>

        <div class="form-group">
            <h4>@Html.LabelFor(model => model.ShortAnswer, htmlAttributes: new { @class = "control-label col-md-2" })</h4>
            <div class="col-md-10">
                <div class="CodeTextBox">
                    @Html.TextAreaFor(model => model.ShortAnswer, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                    @Html.ValidationMessageFor(model => model.ShortAnswer, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>
    </div>
}
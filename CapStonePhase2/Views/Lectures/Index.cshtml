@model IEnumerable<CapStonePhase2.Models.Lectures>

@{
    ViewBag.Title = "Lectures";
}

<h2>@ViewBag.Title</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Topic)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.ActionLink(item.Topic, "Details", new { id = item.Id })
        </td>
        <td>
            @Html.ActionLink("View Test Written", "LectureTest", new { id = item.Id })
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}
</table>

@model CapStonePhase2.Models.Lectures

@{
    ViewBag.Title = "Create New Test";
}

<h2>Test for @Model.Topic</h2>

<h4>Create Methods in order to test if the student to fufill the requirements of the provided assignment</h4>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    
    <div class="form-horizontal">

        <div class="CodeTextBox">
            @Html.TextAreaFor(model => model.CodeFileText)
        </div>
        @Html.ValidationMessageFor(model => model.CodeFileText, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <hr/>
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Submit" class="btn btn-default" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
